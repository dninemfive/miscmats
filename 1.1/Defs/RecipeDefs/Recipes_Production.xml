<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- Neutroamine recipes -->
	<RecipeDef>
		<defName>D9MM_MakeNeutroamine</defName>
		<label>make neutroamine from dreamroot</label>
		<description>Make three units of neutroamine from five dreamroot roots and fifteen chemfuel.</description>
		<jobString>Making neutroamine from dreamroot.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>1350</workAmount>
		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
		<workSkill>Intellectual</workSkill>
		<researchPrerequisite>D9MM_NeutroamineProduction</researchPrerequisite>
		<skillRequirements>
			<Crafting>6</Crafting>
			<Intellectual>4</Intellectual>
	    </skillRequirements>
		<recipeUsers>
			<li>DrugLab</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>D9MM_Dreamroot</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>D9MM_Dreamroot</li>
				<li>Chemfuel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Neutroamine>3</Neutroamine>
		</products>
	</RecipeDef>
	<RecipeDef>
		<defName>D9MM_MakeNeutroamine_Bulk</defName>
