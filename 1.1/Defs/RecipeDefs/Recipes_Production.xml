		<workSkill>Intellectual</workSkill>
		<researchPrerequisite>D9MM_NeutroamineProduction</researchPrerequisite>
		<skillRequirements>
			<Crafting>6</Crafting>
			<Intellectual>4</Intellectual>
	    </skillRequirements>
		<recipeUsers>
			<li>DrugLab</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>D9MM_Dreamroot</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>75</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>D9MM_Dreamroot</li>
				<li>Chemfuel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Neutroamine>15</Neutroamine>
